{
  "extends": ["standard", "standard-react", "eslint-config-prettier"],
  "plugins": ["react-hooks"],
  "parser": "babel-eslint",
  "env": {
    "jest": true
  },
  "rules": {
    "jsx-quotes": ["error", "prefer-double"],
    "semi": ["error", "never"],
    "space-before-function-paren": [
      "error",
      {
        "anonymous": "never",
        "named": "never",
        "asyncArrow": "always"
      }
    ],
    "react-hooks/rules-of-hooks": "error", // Checks rules of Hooks
    "react-hooks/exhaustive-deps": "warn" // Checks effect dependencies
  }
}
